/* 弹框背景 */
.log_shadow {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1024;
  color: #fff;
}

.log_container {
  position: fixed;
  width: 100%;
  margin: auto;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  z-index: 1024;
  font-family: 'Verdana';
}

.log_container .menu{
  position: relative;
  background-color: #efefef;
  border-bottom: 1px solid #ccc;
}
.log_container .menu text{
  display: inline-block;
  padding: 20rpx 40rpx;
  border-right: 1px solid #ccc;
}
.log_container .menu::after{
  content: '恭喜您打开了调试面板';
  position: absolute;
  top: 5rpx;
  right: 0;
  padding: 20rpx;
  font-size: 24rpx;
  color: #666;
}
.log_container .menu .active{
  background-color: #fff;
}

.log_container .mentCont{
  height: 800rpx;
  overflow-y: auto;
  background-color: #efefef;
}
.log_container .mentCont .logItem{
  padding: 10rpx;
  line-height: 1.4;
  border-bottom: 1px solid #e3e3e3;
  word-break:break-all;
  font-size: 26rpx;
}
.log_container .reqCont .logItem{
  padding: 30rpx 20rpx;
}
.log_container .reqCont .fields{
  margin-bottom: 5rpx;
}

.log_container .reqCont .code{
  font-size: 22rpx;
  line-height: 1.2;
}
.log_container .reqCont .fi_tt{
  font-weight: bold;
}


.log_container .toolBar{
  border-top: 1px solid #ccc;
  background-color: #efefef;
}
.log_container .toolBar text{
  position: relative;
  display: inline-block;
  width: 50%;
  text-align: center;
  line-height: 80rpx;

}
.log_container .toolBar .clear::after{
  content: '';
  position: absolute;
  top: 20rpx;
  right: 0;
  height: 40rpx;
  width: 1px;
  background-color: #ccc;
}

